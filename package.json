{
  "name": "web-apps-aggregator",
  "version": "1.0.0",
  "description": "A playground to test web components",
  "main": "dist/my-element.js",
  "module": "dist/my-element.js",
  "type": "module",
  "scripts": {
    "start": "npm run build && npm run serve",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "build": "tsc --outDir dist",
    "build:watch": "tsc --watch --outDir dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "wds --watch",
    "serve:prod": "MODE=prod wds --watch --app-index githubpages.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinimarcili/web-apps-aggregator.git"
  },
  "keywords": [
    "webcomponents",
    "javascript",
    "typescript",
    "web-components",
    "lit-element",
    "lit"
  ],
  "author": "Vin√≠cius Marcili",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vinimarcili/web-apps-aggregator/issues"
  },
  "homepage": "https://github.com/vinimarcili/web-apps-aggregator#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@esm-bundle/chai": "^4.1.5",
    "@lit/localize-tools": "^0.6.0",
    "@open-wc/testing": "^3.0.0-next.1",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/mocha": "^9.0.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-legacy": "^0.1.4",
    "@web/dev-server-rollup": "^0.3.9",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-mocha": "^0.7.4",
    "@web/test-runner-playwright": "^0.8.4",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lit-analyzer": "^1.2.1",
    "mocha": "^9.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-summary": "^1.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.5.5"
  },
